<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <!-- Keep most log output quiet -->
    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>
    <!-- SonicPulse package: allow informational messages -->
    <Logger name="org.steve.sonicpulse" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
  </Loggers>
</Configuration>

